{
  "compilerOptions": {
    "target": "es2020",
    "allowSyntheticDefaultImports": false,
    "baseUrl": "./",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react",
    "paths": {
      "@controllers/*": [
        "server/controllers/*"
      ],
      "@middleware/*": [
        "server/middleware/*"
      ],
      "@util/*": [
        "server/util/*"
      ],
      "Utilities/*": [
        "client/util/*"
      ],
      "Components/*": [
        "client/components/*"
      ],
      "Assets/*": [
        "client/assets/*"
      ],
      "@root/*": [
        "*"
      ],
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}